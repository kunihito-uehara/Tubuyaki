<h1>TOPページ</h1>
<p><%= notice %></p>
<table>
  <th>内容</th>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.content %></td>
      <td><%= link_to '確認', post_path(post) %></td>
      <td><%= link_to "編集", edit_post_path(post.id) %></td>
      <td><%= link_to '削除', post_path(post.id),method: :delete ,data: { confirm: '削除OK？' }  %></td>
    </tr>
  <% end %>
</table>
<%= link_to '投稿する', new_post_path %>
